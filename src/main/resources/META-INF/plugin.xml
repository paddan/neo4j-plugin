<idea-plugin>
    <id>com.lindefors.neo4j.cypher</id>
    <name>Neo4j Cypher Tools</name>
    <vendor email="dev@example.com">Neo4j Plugin</vendor>
    <description>
        <![CDATA[
        Basic Neo4j Cypher support: file type registration, syntax highlighting, and a lightweight formatter.
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends optional="true">com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Register both .cyp and .cypher extensions -->
        <fileType name="Cypher"
                  language="Cypher"
                  extensions="cyp;cypher"
                  implementationClass="com.lindefors.neo4j.cypher.CypherFileType"
                  fieldName="INSTANCE"/>
        <lang.parserDefinition language="Cypher" implementationClass="com.lindefors.neo4j.cypher.CypherParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Cypher" implementationClass="com.lindefors.neo4j.cypher.CypherSyntaxHighlighterFactory"/>
        <colorSettingsPage implementationClass="com.lindefors.neo4j.cypher.CypherColorSettingsPage"/>
        <lang.formatter language="Cypher" implementationClass="com.lindefors.neo4j.cypher.CypherFormattingModelBuilder"/>
    </extensions>
</idea-plugin>
